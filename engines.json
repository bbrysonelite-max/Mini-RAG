{
  "default_engine": "chatgpt_4o_full",

  "engines": {
    "chatgpt_4o_full": {
      "label": "ChatGPT 4o (Full)",
      "provider": "openai",
      "model_id": "gpt-4o",
      "api_key_env": "OPENAI_API_KEY",
      "temperature_default": 0.4,
      "max_output_tokens_default": 2048,
      "recommended_for": [
        "success_coach",
        "workflow_agent",
        "landing_page",
        "email_sequence",
        "decision_record",
        "build_expert_instructions"
      ]
    },

    "chatgpt_4o_mini": {
      "label": "ChatGPT 4o mini",
      "provider": "openai",
      "model_id": "gpt-4o-mini",
      "api_key_env": "OPENAI_API_KEY",
      "temperature_default": 0.7,
      "max_output_tokens_default": 2048,
      "recommended_for": [
        "content_batch",
        "social_posts",
        "lead_social_agent",
        "rough_drafts"
      ]
    },

    "chatgpt_3_5": {
      "label": "ChatGPT 3.5",
      "provider": "openai",
      "model_id": "gpt-3.5-turbo",
      "api_key_env": "OPENAI_API_KEY",
      "temperature_default": 0.5,
      "max_output_tokens_default": 1536,
      "recommended_for": [
        "simple_tasks",
        "low_risk_drafts",
        "utility_prompts"
      ]
    },

    "claude_main": {
      "label": "Claude",
      "provider": "anthropic",
      "model_id": "claude-3-sonnet",
      "api_key_env": "ANTHROPIC_API_KEY",
      "temperature_default": 0.4,
      "max_output_tokens_default": 2048,
      "recommended_for": [
        "long_form_reasoning",
        "summaries",
        "some_coaching_tasks"
      ]
    }
  },

  "agent_engine_defaults": {
    "success_coach": "chatgpt_4o_full",
    "workflow_agent": "chatgpt_4o_full",
    "lead_social_agent": "chatgpt_4o_mini"
  }
}




